<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        app:srcCompat="@android:color/holo_red_dark"
        android:id="@+id/imageView8"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        app:srcCompat="@android:color/holo_red_dark"
        android:id="@+id/imageView4"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/imgEnemySprite"
        android:layout_toLeftOf="@+id/imgEnemySprite"
        android:layout_toStartOf="@+id/imgEnemySprite"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <ImageView
        android:layout_marginTop="33dp"
        android:id="@+id/imgEnemySprite"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@mipmap/img_enemy_easy" />

    <ImageView
        android:id="@+id/imgEnemyHealth"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignTop="@+id/imageView4"
        app:srcCompat="@android:color/holo_green_dark" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:id="@+id/imageView2"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/txtEnemyName"
        android:layout_alignEnd="@+id/txtEnemyName" />

    <ImageView
        app:srcCompat="@android:color/holo_green_dark"
        android:id="@+id/imgPlayerHealth"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPlayerName"
        android:text="Player"
        android:layout_above="@+id/imgPlayerHealth"
        android:layout_alignLeft="@+id/imgPlayerHealth"
        android:layout_alignStart="@+id/imgPlayerHealth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEnemyName"
        android:text="Honeycomb"
        android:layout_above="@+id/imageView4"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <Button
        android:text="Attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginTop="61dp"
        android:id="@+id/btnAttack" />

    <Button
        android:text="Block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnAttack"
        android:layout_toRightOf="@+id/imgEnemyHealth"
        android:layout_toEndOf="@+id/imgEnemyHealth"
        android:id="@+id/btnBlock" />

    <TextView
        android:id="@+id/txtCombatLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnAttack"
        android:text="Combat Log Started." />
</RelativeLayout>